
@{
    ViewData["Title"] = "Profile";
}

@section Links{
    <link rel="stylesheet" href="~/css/profile.css">
}

<section class="inner-section single-banner">
    <div class="container">
        <h2>my profile</h2>
    </div>
</section>

<section class="inner-section profile-part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="account-card">
                    <div class="account-title">
                        <h4>Your Profile</h4>
                        <a asp-controller="Account" asp-action="Logout">
                            logout
                        </a>
                    </div>
                    <div class="account-content">
                        <div class="row">
                            <div class="col-lg-2">
                                <div class="profile-image">
                                    <a href="#"><img src="~/images/user.png" alt="user"></a>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-4">
                                <div class="form-group">
                                    <label class="form-label">full name</label><input class="form-control" type="text" value="@ViewBag.fullName">
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-4">
                                <div class="form-group">
                                    <label class="form-label">email</label><input class="form-control" type="email" value="@ViewBag.email">
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <div class="profile-btn"><a href="#">change pass.</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>