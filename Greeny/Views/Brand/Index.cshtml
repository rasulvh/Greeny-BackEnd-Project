@model BrandVM
@{
    ViewData["Title"] = "Index";
}

@section Links{
    <link rel="stylesheet" href="~/css/brand-list.css">
}

    <section class="inner-section single-banner" style="background: url(images/single-banner.jpg) no-repeat center;">
        <div class="container">
            <h2>brand list</h2>
        </div>
    </section>
    <section class="inner-section">
        <div class="container">
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 isotope-items">
            @foreach(var item in Model.PaginateResult.Datas)
            {
                <div class="col all">
                    <div class="brand-wrap">
                        <div class="brand-media">
                            <img src="~/images/brand/@item.Image" alt="brand">
                            <div class="brand-overlay"><a href="#"><i class="fas fa-link"></i></a></div>
                        </div>
                        <div class="brand-meta">
                            <h4>@item.Name</h4>
                            <p>(@item.Products.Count items)</p>
                        </div>
                    </div>
                </div>
            }
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="bottom-paginate">
                        <p class="page-info">Showing @Model.PaginateResult.Datas.Count of @Model.BrandCount Results</p>
                        <ul class="pagination">
                            <li class="page-item @(Model.PaginateResult.HasPrevious ? "" : "disabled")">
                                <a class="page-link" asp-route-page="@(Model.PaginateResult.CurrentPage-1)"><i class="fas fa-long-arrow-alt-left"></i></a>
                            </li>
                            @for (int i = 1; i <= Model.PaginateResult.TotalPage; i++)
                                {
                                <li class="page-item @(Model.PaginateResult.CurrentPage == i ? "disabled" : "")"><a class="page-link" asp-route-page="@i">@i</a></li>
                                }
                            <li class="page-item @(Model.PaginateResult.HasNext ? "" : "disabled")">
                                <a class="page-link" asp-route-page="@(Model.PaginateResult.CurrentPage+1)"><i class="fas fa-long-arrow-alt-right"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
