@model ProductCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1 class="my-5 text-center">Create Product</h1>

    <form method="post" enctype="multipart/form-data" asp-action="Create">
        <div class="form-group mt-3">
            <input asp-for=Name class="form-control" placeholder="Name"/>
        </div>
        <div class="form-group mt-3">
            <input asp-for=Description class="form-control" placeholder="Description" />
        </div>
        <div class="form-group mt-3">
            <input asp-for=StockCount class="form-control" placeholder="Stock Count" />
        </div>
        <div class="form-group mt-3">
            <input asp-for=Price class="form-control" placeholder="Price" />
        </div>
        <div class="form-group mt-3">
            <select id="categoryId" asp-for="CategoryId" asp-items="ViewBag.categories" class="animated-input form-control">
                <option disabled selected>Select Category</option>
            </select>
        </div>
        <div class="form-group mt-3">
            <select id="subCatogId" asp-for="SubCategoryId" asp-items="ViewBag.subcategories" class="animated-input form-control"></select>
        </div>
        <div class="form-group mt-3">
            <select asp-for=DiscountId class="form-control" asp-items="ViewBag.discounts"></select>
        </div>
        <div class="form-group mt-3">
            <select asp-for=BrandId class="form-control" asp-items="ViewBag.brands"></select>
        </div>
        <div class="form-group mt-3">
            <lable>Images</lable>
            <input asp-for=Images class="form-control" />
        </div>
        <div class="form-group mt-3">
            <label>Tags</label>
            @for (var i = 0; i < Model.Tags.Count; i++)
            {
                <div class="form-check">
                    <input type="checkbox" asp-for="@Model.Tags[i].IsChecked" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Tags[i].IsChecked">
                        @Model.Tags[i].Value
                    </label>
                    <input type="hidden" asp-for="@Model.Tags[i].Id" />
                    <input type="hidden" asp-for="@Model.Tags[i].Value" />
                    <br />
                </div>
            }
        </div>
        <a asp-action="Index" class="btn btn-primary">Back</a>
        <button type="submit" class="btn btn-success">Create</button>
    </form>
</div>

