@model BlogEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1 class="my-5 text-center">Edit Blog</h1>
    <div class="image">
        <img src="~/images/blog/@Model.Image" style="width:400px;height250px" />
    </div>
    <form method="post" enctype="multipart/form-data" asp-action="Edit">
        <div class="form-group mt-3">
            <input asp-for=Title class="form-control" placeholder="Title" />
        </div>
        <div class="form-group mt-3">
            <input asp-for=Text class="form-control" placeholder="Text" />
        </div>
        <div class="form-group mt-3">
            <lable>New Image</lable>
            <input asp-for=NewImage class="form-control" />
        </div>
        <div asp-validation-summary="All"></div>
        <a asp-action="Index" class="btn btn-primary">Back</a>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
</div>
